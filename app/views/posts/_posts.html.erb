<div class="container-fluid border border-light bg-light rounded pt-3 pb-3 mb-3">
  <% if posts.empty? %>
    <%= 'Nothing to see here' %>
  <% else %>
    <% posts.all.each do |post| %>
      <%= render partial: 'posts/post', locals: { post: post } %>
      <%= render partial: 'posts/comment_form', locals: { post: post } %>
      <div class="pt-3">
        <% post.comments.all.each do |comment| %>
          <div class="container-fluid d-flex flex-column">
            <%= render partial: 'posts/comment', locals: { comment: comment } %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>