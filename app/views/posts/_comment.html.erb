<div class="container-fluid d-flex flex-row border border-darkgrey pt-2 pb-2 mt-2 rounded-lg bg-white">
  <div class="mb-2 mt-2 mr-3"><% if comment.user.profile.profile_picture.attached? %>
      <%= image_tag comment.user.profile.profile_picture.variant(resize: '40x40!'), class: "img-fluid rounded-circle" %>
    <% else %>
      <%= image_tag gravatar_image_url(comment.user.email, size: '40'), height: '40', width: '40', class: 'rounded-circle img-fluid' %>
    <% end %>
  </div>
  <div class="d-flex flex-column">
    <div><strong><%= link_to(comment.user.name, user_path(comment.user.id)) %></strong></div>
    <div><%= comment.content %></div>
  </div>
</div>