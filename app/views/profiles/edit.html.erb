<%= form_with model: @profile, url: user_profile_path(current_user[:id]), method: 'put' do |f| %>
  <%= f.label :profile_picture, 'Profile picture: '%><br>
  <%= f.file_field :profile_picture %><br>
  <%= f.label :bio, 'Bio: '%>
  <%= f.text_area :bio %><br>
  <%= f.label :location, 'Current town or city: '%>
  <%= f.text_field :location %><br>
  <%= f.label :workplace, 'Workplace: '%>
  <%= f.text_field :workplace %><br>
  <%= f.label :school, 'School or university: '%>
  <%= f.text_field :school %><br>
  <%= f.label :home_town, 'Home town: '%>
  <%= f.text_field :home_town %><br>
  <%= f.label :relationship_status, 'Relationship status: '%>
  <%= f.text_field :relationship_status %><br>
  <%= f.label :birthday, 'Date of birth (dd/mm/yyyy): '%>
  <%= f.date_field :birthday %><br>
  <%= f.submit 'Update' %>
<% end %>